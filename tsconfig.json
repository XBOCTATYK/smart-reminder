{
    "include": [
        "src/app.ts"
    ],
    "exclude": [
        "node_modules",
        "config",
        ".build",
        "deploy",
        "tls"
    ],
    "compilerOptions": {
        "outDir": "./build/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "es2020",
        "target": "es2017",
        "jsx": "react",
        "allowJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "baseUrl": "./",
        "paths": {
            "Src/*": ["src/*"],
            "Models/*": ["src/models/*"],
            "Services/*": ["src/services/*"],
            "Types/*": ["src/types/*"],
            "Constants/*": ["src/constants/*"],
            "Utils/*": ["src/utils/*"]
        }
    }
}
